pipeline {
    agent any
    parameters {
        string(name: 'ENVIRONMENT', defaultValue: 'dev', description: 'Environment')
    }
    environment {
        AWS_DEFAULT_REGION = 'ap-southeast-2'
    }

    stages {
        stage('Download GIT Hub Repo') {
            steps {
                echo 'Downloading..'
                script {
                    git changelog: false, poll: false, url: 'git url: 'https://github.com/sanjayrohilla13/makefile-parameter-passing.git'                
                }
            }
        }

        stage('Build') {
            steps {
               script {
               // sh 'make docker-build '
               //sh 'docker build -t centos-repo .'
                switch(params.ENVIRONMENT) {
                case 'dev':
                    env.AWS_ACC_NO=11111111111;
                    break;
                case 'preprod':
                    env.AWS_ACC_NO=22222222222;
                    break;
                case 'prod':
                    env.AWS_ACC_NO=333333333333;
                    break;
               }
               println "${env.AWS_ACC_NO}" 
               echo 'Building....'
               }
            }
        }    
    }
}